{
  "name": "x-forward-backend",
  "private": true,
  "version": "0.0.1",
  "description": "ui for nginx stream",
  "license": "MIT",
  "scripts": {
    "pkg": "pkg .",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@automapper/classes": "^6.2.1",
    "@automapper/core": "^6.2.1",
    "@automapper/nestjs": "^6.2.1",
    "@nestjs/common": "^7.5.5",
    "@nestjs/config": "^1.0.1",
    "@nestjs/core": "^7.6.18",
    "@nestjs/platform-express": "^7.6.18",
    "@nestjs/platform-socket.io": "^7.6.18",
    "@nestjs/swagger": "^4.5.1",
    "@nestjs/typeorm": "^7.1.5",
    "@nestjs/websockets": "^7.6.18",
    "@types/nunjucks": "^3.2.0",
    "cache-manager": "^3.4.4",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "helmet": "^4.6.0",
    "moment": "^2.29.1",
    "node-pty": "^0.10.1",
    "nunjucks": "^3.2.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.3.0",
    "sqlite3": "^4.2.0",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.37",
    "uuid": "^8.3.2",
    "zx": "^4.0.0"
  },
  "devDependencies": {
    "@automapper/types": "^6.2.1",
    "@nestjs/cli": "^8.1.3",
    "@nestjs/schematics": "^8.0.2",
    "@nestjs/testing": "^7.6.18",
    "@types/cache-manager": "^3.4.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.1",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.5",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "bin": "dist/main.js",
  "pkg": {
    "scripts": [
      "dist/**/*.js",
      "node_modules/lodash/cloneDeep.js"
    ],
    "assets": [
      "temp/**",
      "node_modules/sqlite3/lib/binding/node-v93-linux-x64/node_sqlite3.node"
    ],
    "targets": [
      "node16-linux-x64"
    ],
    "outputPath": "pkg"
  }
}
