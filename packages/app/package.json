{
    "name": "@x-forward/app",
    "version": "0.0.1",
    "description": "ui for nginx stream",
    "license": "MIT",
    "scripts": {
        "prebuild": "rimraf dist",
        "build:server": "nest build",
        "build:client": "nest build x-forward-client",
        "build:lib": "nest build common",
        "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
        "start": "nest start",
        "dev": "nest start --watch",
        "debug": "nest start --debug --watch",
        "client:start": "nest start x-forward-client",
        "client:dev": "nest start x-forward-client --watch",
        "client:debug": "nest start x-forward-client --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./apps/x-forward-app/test/jest-e2e.json"
    },
    "dependencies": {
        "@automapper/classes": "7.3.14",
        "@automapper/core": "7.3.14",
        "@automapper/nestjs": "7.3.14",
        "@forwardx/shared": "workspace:*",
        "@grpc/grpc-js": "1.6.7",
        "@grpc/proto-loader": "0.6.11",
        "@nestjs/axios": "0.0.7",
        "@nestjs/common": "8.4.4",
        "@nestjs/config": "2.0.0",
        "@nestjs/core": "8.4.4",
        "@nestjs/event-emitter": "1.1.0",
        "@nestjs/jwt": "8.0.0",
        "@nestjs/microservices": "8.4.4",
        "@nestjs/mongoose": "9.0.3",
        "@nestjs/passport": "8.2.1",
        "@nestjs/platform-express": "8.4.4",
        "@nestjs/platform-socket.io": "8.4.4",
        "@nestjs/schedule": "1.1.0",
        "@nestjs/swagger": "5.2.1",
        "@nestjs/typeorm": "9.0.0-next.2",
        "@nestjs/websockets": "8.4.4",
        "axios": "0.27.2",
        "better-sqlite3": "7.5.1",
        "cache-manager": "3.6.1",
        "class-transformer": "0.5.1",
        "class-validator": "0.13.2",
        "cron": "2.0.0",
        "helmet": "5.0.2",
        "moment": "2.29.3",
        "mongoose": "6.3.2",
        "node-pty": "0.10.1",
        "nunjucks": "3.2.3",
        "passport": "0.5.2",
        "passport-jwt": "4.0.0",
        "passport-local": "1.0.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "3.0.2",
        "rxjs": "7.5.5",
        "socket.io": "^4.4.1",
        "swagger-ui-express": "4.3.0",
        "typeorm": "0.3.6",
        "uuid": "8.3.2",
        "zx": "4.3.0"
    },
    "devDependencies": {
        "@nestjs/cli": "8.2.5",
        "@nestjs/schematics": "8.0.11",
        "@nestjs/testing": "8.4.4",
        "@types/cache-manager": "3.4.3",
        "@types/cron": "1.7.3",
        "@types/express": "4.17.13",
        "@types/jest": "27.5.0",
        "@types/node": "16.11.33",
        "@types/nunjucks": "3.2.1",
        "@types/passport-jwt": "3.0.6",
        "@types/passport-local": "1.0.34",
        "@types/supertest": "2.0.12",
        "@types/uuid": "8.3.4",
        "supertest": "6.2.3",
        "ts-loader": "9.3.0",
        "tsconfig-paths": "4.0.0",
        "typescript": "4.6.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "./coverage",
        "testEnvironment": "node",
        "moduleNameMapper": {
            "^@x-forward/common": "<rootDir>/libs/common/src",
            "^@x-forward/executor": "<rootDir>/libs/executor/src",
            "^@x-forward/render": "<rootDir>/libs/render/src",
            "^@x-forward/bucket(|/.*)$": "<rootDir>/libs/bucket/src/$1"
        },
        "roots": [
            "<rootDir>/apps/",
            "<rootDir>/libs/"
        ]
    }
}