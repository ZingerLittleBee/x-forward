{
    "extends": "stylelint-config-standard",
    "rules": {
        "indentation": 4,
        "color-no-invalid-hex": true,
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "tailwind",
                    "apply",
                    "variants",
                    "responsive",
                    "screen",
                    "function",
                    "if",
                    "each",
                    "include",
                    "mixin"
                ]
            }
        ]
    }
}
